<div class="container">
<h1 class="text-center my-5">My Cart</h1>
</div>

<div style="max-width: 800px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px;">
  <% @cart_products.each do |cp| %>
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
      <span><strong><%= cp.product.name %></strong> - Cantidad: <%= cp.quantity %></span>
      <div style="display: flex; gap: 5px;">
        <%= button_to "+", increment_path(cp), method: :patch, class: "btn btn-success btn-sm" %>
        <%= button_to "-", decrement_path(cp), method: :patch, class: "btn btn-success btn-sm" %>
      </div>
    </div>
    <hr>
  <% end %>
<%= form_with url: cart_payments_path(@cart), method: :post do |form| %>
<%= form.hidden_field :cart_id, value: @cart.id %>
<%= submit_tag "Make Payment", class: "btn btn-primary" %> <% end %>
</div>
