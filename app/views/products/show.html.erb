<%= link_to "<- See all products", products_path, class: "btn btn-outline-primary mb-4" %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="row align-items-center bg-light p-4 rounded shadow">
        <div class="col-md-6 text-center mb-4 mb-md-0">
          <% if @product.image_url.present? %>
            <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="img-fluid rounded shadow-sm" style="max-height: 350px;">
          <% else %>
            <div class="text-muted">No image available</div>
          <% end %>
        </div>
        <div class="col-md-6">
          <h2 class="fw-bold text-center text-md-start"><%= @product.name %></h2>
          <p class="text-muted text-center text-md-start mb-3"><%= @product.description %></p>
          <h4 class="text-primary text-center text-md-start mb-4">$<%= @product.price %></h4>

          <div class="d-flex justify-content-center justify-content-md-start">
            <%= simple_form_for [@product, CartProduct.new], html: { class: "w-100" } do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.submit "ðŸ›’ Add to cart", class: "btn btn-success w-100" %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
