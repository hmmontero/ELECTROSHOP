<h1>Lists available products</h1>
<p>what are you looking for?</p>

<div class="container">
  <div class="row">
    <div class="column">
      <ol class="row">
        <% @products.each do |product| %>
          <li>
            <h3><%= product.name %></h3>
            <% if product.image_url.present? %>
              <img src="<%= product.image_url %>" alt="<%= product.name %>" style="max-width:150px;">
            <% end %>
            <%= simple_form_for [product, @cart_product] do |f| %>
              <%= f.submit "Add to cart", class: "btn btn-primary border mt-1" %>
              <%= link_to "See details of #{product.name}", product_path(product), class: "btn btn-primary mt-1" %>
            <% end %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>
