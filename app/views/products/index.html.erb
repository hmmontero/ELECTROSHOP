<%= render "shared/banner" %>

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card h-100 shadow" style="width: 17rem;">
          <div class="card-body">
            <h5 class="card-title text-center"><%= product.name %></h5>
            <div class="mb-3">
              <%= simple_form_for [product, CartProduct.new],
                  url: product_cart_products_path(product),
                  method: :post do |f| %>
                <%= f.submit "Add to cart",
                class: "btn button-electroshop w-100" %>
              <% end %>
            </div>
            <%= link_to "See details", product_path(product), class: "btn button-electroshop w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
